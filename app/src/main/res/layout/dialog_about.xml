<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:padding="16dp">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="About"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_marginBottom="8dp"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text=" Auther: 1503Dev (TheChuan1503)"
		android:typeface="monospace"
		android:textSize="12sp"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Version: 1.0.3"
		android:textSize="12sp"
		android:typeface="monospace"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text=" Github: 1503Dev/SC-World-Editor"
		android:textSize="12sp"
		android:typeface="monospace"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="12sp"
		android:text="    OSS: Material Components for Android"
		android:typeface="monospace"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="12sp"
		android:text="         AndroidZip"
		android:typeface="monospace"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="12sp"
		android:text="         Zip4j"
		android:typeface="monospace"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="12sp"
		android:text="         Apache Commons Lang"
		android:typeface="monospace"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="12sp"
		android:text="             Apache-2.0 License"
		android:typeface="monospace"
		android:textStyle="italic"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="         DedroidUtil"
		android:textSize="12sp"
		android:typeface="monospace"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="             MIT License"
		android:textSize="12sp"
		android:typeface="monospace"
		android:textStyle="italic"/>

	<com.google.android.material.button.MaterialButton
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Github"
		android:onClick="toGithub"
		android:layout_marginTop="8dp"/>

</LinearLayout>

